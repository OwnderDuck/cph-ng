{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Problem",
    "type": "object",
    "properties": {
        "version": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "url": {
            "type": "string"
        },
        "tcs": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "stdin": {
                        "type": "object",
                        "properties": {
                            "useFile": {
                                "type": "boolean"
                            },
                            "path": {
                                "type": "string"
                            },
                            "data": {
                                "type": "string"
                            }
                        },
                        "required": ["useFile"]
                    },
                    "answer": {
                        "type": "object",
                        "properties": {
                            "useFile": {
                                "type": "boolean"
                            },
                            "path": {
                                "type": "string"
                            },
                            "data": {
                                "type": "string"
                            }
                        },
                        "required": ["useFile"]
                    },
                    "isExpand": {
                        "type": "boolean"
                    },
                    "result": {
                        "type": "object",
                        "properties": {
                            "verdict": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "fullName": {
                                        "type": "string"
                                    },
                                    "color": {
                                        "type": "string"
                                    }
                                },
                                "required": ["name", "fullName", "color"]
                            },
                            "memory": {
                                "type": "number"
                            },
                            "time": {
                                "type": "number"
                            },
                            "stdout": {
                                "type": "object",
                                "properties": {
                                    "useFile": {
                                        "type": "boolean"
                                    },
                                    "path": {
                                        "type": "string"
                                    },
                                    "data": {
                                        "type": "string"
                                    }
                                },
                                "required": ["useFile"]
                            },
                            "stderr": {
                                "type": "object",
                                "properties": {
                                    "useFile": {
                                        "type": "boolean"
                                    },
                                    "path": {
                                        "type": "string"
                                    },
                                    "data": {
                                        "type": "string"
                                    }
                                },
                                "required": ["useFile"]
                            },
                            "msg": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "verdict",
                            "time",
                            "stdout",
                            "stderr",
                            "msg"
                        ]
                    }
                },
                "required": ["stdin", "answer", "isExpand"]
            }
        },
        "timeLimit": {
            "type": "integer",
            "minimum": 1
        },
        "memoryLimit": {
            "type": "integer",
            "minimum": 1
        },
        "src": {
            "type": "object",
            "properties": {
                "path": {
                    "type": "string"
                },
                "hash": {
                    "type": "string",
                    "minLength": 64,
                    "maxLength": 64
                }
            },
            "required": ["path"]
        },
        "checker": {
            "type": "object",
            "properties": {
                "path": {
                    "type": "string"
                },
                "hash": {
                    "type": "string",
                    "minLength": 64,
                    "maxLength": 64
                }
            },
            "required": ["path"]
        },
        "interactor": {
            "type": "object",
            "properties": {
                "path": {
                    "type": "string"
                },
                "hash": {
                    "type": "string",
                    "minLength": 64,
                    "maxLength": 64
                }
            },
            "required": ["path"]
        },
        "bfCompare": {
            "type": "object",
            "properties": {
                "generator": {
                    "type": "object",
                    "properties": {
                        "path": {
                            "type": "string"
                        },
                        "hash": {
                            "type": "string",
                            "minLength": 64,
                            "maxLength": 64
                        }
                    },
                    "required": ["path"]
                },
                "bruteForce": {
                    "type": "object",
                    "properties": {
                        "path": {
                            "type": "string"
                        },
                        "hash": {
                            "type": "string",
                            "minLength": 64,
                            "maxLength": 64
                        }
                    },
                    "required": ["path"]
                },
                "running": {
                    "type": "boolean"
                },
                "msg": {
                    "type": "string"
                }
            },
            "required": ["running", "msg"]
        },
        "timeElapsed": {
            "type": "integer",
            "minimum": 0
        }
    },
    "required": [
        "version",
        "name",
        "tcs",
        "timeLimit",
        "memoryLimit",
        "src",
        "timeElapsed"
    ]
}
